{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "plugins": ["svelte3"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": ["off"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.e2e.js", "config/jest/**"],
      "env": {
        "jest": true
      },
      "globals": {
        "browser": true
      }
    }
  ]
}
